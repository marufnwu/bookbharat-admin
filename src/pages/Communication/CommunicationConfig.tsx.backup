import React, { useState, useEffect } from 'react';
import {
  Mail,
  MessageSquare,
  Smartphone,
  Settings,
  CheckCircle,
  XCircle,
  X,
  AlertCircle,
  Globe,
  Send,
  Server,
  Shield,
  Zap,
  BarChart3,
  TestTube,
  RotateCw,
  Trash2,
  Clock,
  Plus,
  Package,
} from 'lucide-react';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { useLocation } from 'react-router-dom';
import { communicationConfigApi, notificationSettingsApi } from '../../api/notificationSettings';
import { showToast } from '../../utils/toast';

interface CommunicationChannel {
  id: number;
  channel_type: string;
  provider_name: string;
  config: any;
  is_active: boolean;
  created_at: string;
  updated_at: string;
}

interface ProviderField {
  key: string;
  label: string;
  type: 'text' | 'email' | 'password' | 'number' | 'url' | 'tel' | 'select';
  placeholder?: string;
  required: boolean;
  description: string;
  options?: Array<{ value: string; label: string }>;
  default?: string;
  encrypted?: boolean;
}

interface ProviderInfo {
  name: string;
  description: string;
  icon: string;
  fields: ProviderField[];
}

interface ProviderStructures {
  [channelType: string]: {
    [providerName: string]: ProviderInfo;
  };
}

// WhatsApp Template interfaces
interface WhatsAppTemplate {
  name: string;
  category: string;
  language: string;
  status: 'APPROVED' | 'PENDING' | 'REJECTED' | 'DISABLED';
  components: any[];
  required_for_events?: string[];
}

interface WhatsAppDashboardData {
  success: boolean;
  data: {
    health_status: {
      overall_status: string;
      total_templates: number;
      synced_templates: number;
      missing_templates: number;
      pending_review: number;
      errors: string[];
    };
    validation_report: {
      valid_templates: Record<string, any>;
      invalid_templates: Record<string, any>;
      warnings: Record<string, string[]>;
      summary: {
        total: number;
        valid: number;
        invalid: number;
        warnings: number;
      };
    };
    static_templates: string[];
    supported_events: string[];
    sync_config: Record<string, any>;
    connection_status: {
      status: 'connected' | 'disconnected' | 'error';
      message: string;
      business_id?: string;
      business_name?: string;
      last_checked: string;
    };
    last_updated: string;
  };
}

interface TemplateStatus {
  success: boolean;
  data: {
    template_name: string;
    static_definition: WhatsAppTemplate;
    whatsapp_status: WhatsAppTemplate | null;
    validation: {
      valid: boolean;
      errors: string[];
      warnings: string[];
    };
    events_using: string[];
    last_checked: string;
  };
}

const CommunicationConfig: React.FC = () => {
  const location = useLocation();
  const queryClient = useQueryClient();
  const [selectedChannel, setSelectedChannel] = useState<string>('email');
  const [selectedProvider, setSelectedProvider] = useState<string>('smtp');
  const [testEmail, setTestEmail] = useState<string>('');
  const [testPhone, setTestPhone] = useState<string>('');
  const [isTesting, setIsTesting] = useState<boolean>(false);
  const [editingChannel, setEditingChannel] = useState<number | null>(null);

  // WhatsApp Template state
  const [whatsappActiveTab, setWhatsAppActiveTab] = useState<'config' | 'templates'>('config');
  const [selectedTemplate, setSelectedTemplate] = useState<string>('');
  const [templateTestNumber, setTemplateTestNumber] = useState<string>('');

  // Enhanced template management states
  const [showCreateTemplate, setShowCreateTemplate] = useState<boolean>(false);
  const [selectedCategory, setSelectedCategory] = useState<string>('');
  const [selectedPreset, setSelectedPreset] = useState<any>(null);
  const [newTemplateName, setNewTemplateName] = useState<string>('');
  const [creatingTemplate, setCreatingTemplate] = useState<boolean>(false);
  const [templateCategories, setTemplateCategories] = useState<{ [key: string]: any }>({});
  const [syncResults, setSyncResults] = useState<any>(null); // Store detailed sync results

  // Template filtering states
  const [templateFilter, setTemplateFilter] = useState<string>('all');
  const [statusFilter, setStatusFilter] = useState<string>('all');

  // Helper function to extract template variables from text
  const getTemplateVariables = (text: string): string[] => {
    const regex = /\{\{(\d+)\}\}/g;
    const variables: string[] = [];
    let match;
    while ((match = regex.exec(text)) !== null) {
      variables.push(match[0]);
    }
    return variables;
  };

  // Form state - dynamically populated based on provider structure
  const [formData, setFormData] = useState<{ [key: string]: string | number }>({});

  // Determine channel based on current route
  useEffect(() => {
    const path = location.pathname;
    if (path.includes('/communication/sms')) {
      setSelectedChannel('sms');
    } else if (path.includes('/communication/whatsapp')) {
      setSelectedChannel('whatsapp');
    } else {
      setSelectedChannel('email');
    }
  }, [location.pathname]);

  // Fetch provider structures from backend
  const { data: providerStructuresData, isLoading: structuresLoading } = useQuery({
    queryKey: ['communication-provider-structures'],
    queryFn: communicationConfigApi.getAllProviderStructures,
  });

  // Fetch communication settings
  const { data: communicationData, isLoading, refetch } = useQuery({
    queryKey: ['communication-settings'],
    queryFn: communicationConfigApi.getAll,
  });

  const channels = communicationData?.data || [];

  // Fallback provider structures in case backend doesn't provide them
  const defaultProviderStructures: ProviderStructures = {
    email: {
      smtp: {
        name: 'SMTP',
        description: 'Standard SMTP mail server',
        icon: 'mail',
        fields: [
          { key: 'host', label: 'SMTP Host', type: 'text', required: true, placeholder: 'smtp.example.com', description: 'Your SMTP server hostname' },
          { key: 'port', label: 'SMTP Port', type: 'number', required: true, default: '587', description: 'SMTP server port (usually 587 for TLS, 465 for SSL)' },
          { key: 'encryption', label: 'Encryption', type: 'select', required: true, default: 'tls', description: 'Connection encryption method', options: [
            { value: 'none', label: 'None' },
            { value: 'ssl', label: 'SSL' },
            { value: 'tls', label: 'TLS' }
          ]},
          { key: 'username', label: 'Username', type: 'text', required: true, description: 'Your SMTP username' },
          { key: 'password', label: 'Password', type: 'password', required: true, description: 'Your SMTP password' },
          { key: 'from_address', label: 'From Address', type: 'email', required: true, description: 'Email address to send from' },
          { key: 'from_name', label: 'From Name', type: 'text', required: true, description: 'Display name for emails' }
        ]
      },
      sendgrid: {
        name: 'SendGrid',
        description: 'SendGrid API integration',
        icon: 'cloud',
        fields: [
          { key: 'api_key', label: 'API Key', type: 'password', required: true, description: 'Your SendGrid API key' },
          { key: 'from_email', label: 'From Email', type: 'email', required: true, description: 'Email address to send from' },
          { key: 'from_name', label: 'From Name', type: 'text', required: true, description: 'Display name for emails' }
        ]
      }
    },
    sms: {
      twilio: {
        name: 'Twilio',
        description: 'Twilio SMS API',
        icon: 'message',
        fields: [
          { key: 'account_sid', label: 'Account SID', type: 'text', required: true, description: 'Your Twilio Account SID' },
          { key: 'auth_token', label: 'Auth Token', type: 'password', required: true, description: 'Your Twilio Auth Token' },
          { key: 'from_number', label: 'From Number', type: 'text', required: true, placeholder: '+1234567890', description: 'Your Twilio phone number' }
        ]
      },
      msg91: {
        name: 'MSG91',
        description: 'MSG91 SMS Gateway',
        icon: 'send',
        fields: [
          { key: 'authkey', label: 'Auth Key', type: 'password', required: true, description: 'Your MSG91 auth key' },
          { key: 'sender_id', label: 'Sender ID', type: 'text', required: true, description: '6-character sender ID' },
          { key: 'route', label: 'Route', type: 'select', required: true, default: '4', description: 'SMS route type', options: [
            { value: '1', label: 'Transactional' },
            { value: '4', label: 'Promotional' }
          ]}
        ]
      }
    },
    whatsapp: {
      meta: {
        name: 'Meta WhatsApp',
        description: 'Meta WhatsApp Business API',
        icon: 'brand',
        fields: [
          { key: 'api_url', label: 'API URL', type: 'text', required: true, default: 'https://graph.facebook.com', description: 'Meta Graph API URL' },
          { key: 'access_token', label: 'Access Token', type: 'password', required: true, description: 'Your WhatsApp Business API access token' },
          { key: 'phone_number_id', label: 'Phone Number ID', type: 'text', required: true, description: 'Your WhatsApp phone number ID' },
          { key: 'business_account_id', label: 'Business Account ID', type: 'text', required: true, description: 'Your Business Account ID' }
        ]
      },
      twilio: {
        name: 'Twilio WhatsApp',
        description: 'Twilio WhatsApp API',
        icon: 'message-circle',
        fields: [
          { key: 'account_sid', label: 'Account SID', type: 'text', required: true, description: 'Your Twilio Account SID' },
          { key: 'auth_token', label: 'Auth Token', type: 'password', required: true, description: 'Your Twilio Auth Token' },
          { key: 'from_number', label: 'From Number (WhatsApp)', type: 'text', required: true, description: 'Your Twilio WhatsApp-enabled number' }
        ]
      }
    }
  };

  const providerStructures: ProviderStructures = providerStructuresData?.data || defaultProviderStructures;

  // Get available providers for selected channel
  const availableProviders = Object.keys(providerStructures[selectedChannel] || {});

  // Get current provider structure
  const currentProviderStructure = providerStructures[selectedChannel]?.[selectedProvider];

  // Initialize form data when provider changes
  useEffect(() => {
    if (currentProviderStructure?.fields) {
      const initialData: { [key: string]: string | number } = {};
      currentProviderStructure.fields.forEach((field) => {
        initialData[field.key] = field.default || '';
      });
      setFormData(initialData);
    }
  }, [selectedProvider, currentProviderStructure]);

  // Queries for WhatsApp Templates
  const { data: whatsappDashboard, isLoading: dashboardLoading, refetch: refetchDashboard } = useQuery({
    queryKey: ['whatsapp', 'templates', 'dashboard'],
    queryFn: async () => {
      try {
        const response = await notificationSettingsApi.getWhatsAppTemplateDashboard();
        return response.data;
      } catch (error) {
        console.error('Failed to fetch WhatsApp dashboard:', error);
        return null;
      }
    },
    enabled: whatsappActiveTab === 'templates'
  });

  // Fetch template structures from backend
  const { data: templateStructures, isLoading: templateStructuresLoading } = useQuery({
    queryKey: ['whatsapp', 'templates', 'structures'],
    queryFn: async () => {
      try {
        const response = await notificationSettingsApi.getWhatsAppTemplateStructures();
        return response.data;
      } catch (error) {
        console.error('Failed to fetch template structures:', error);
        return [];
      }
    },
    enabled: whatsappActiveTab === 'templates'
  });

  // Fetch enhanced template categories
  const { data: categoriesData, isLoading: categoriesLoading } = useQuery({
    queryKey: ['whatsapp', 'templates', 'categories'],
    queryFn: async () => {
      try {
        const response = await fetch('/api/v1/admin/whatsapp-templates/categories', {
          headers: {
            'Authorization': `Bearer ${localStorage.getItem('admin_token')}`,
            'Content-Type': 'application/json',
          }
        });
        const data = await response.json();
        if (data.success) {
          // Transform templates to include key for easy access
          const transformed = Object.keys(data.data).reduce((acc: any, categoryKey) => {
            acc[categoryKey] = {
              ...data.data[categoryKey],
              templates: Object.keys(data.data[categoryKey].templates).map(templateKey => ({
                key: templateKey,
                ...data.data[categoryKey].templates[templateKey]
              }))
            };
            return acc;
          }, {});
          setTemplateCategories(transformed);
          return data.data;
        }
        return null;
      } catch (error) {
        console.error('Failed to fetch template categories:', error);
        return null;
      }
    },
    enabled: whatsappActiveTab === 'templates'
  });

  const { data: templateStatus, isLoading: templateStatusLoading } = useQuery({
    queryKey: ['whatsapp', 'templates', 'status'],
    queryFn: async () => {
      try {
        const response = await notificationSettingsApi.getWhatsAppTemplateStatus('');
        return response.data;
      } catch (error) {
        console.error('Failed to fetch template status:', error);
        return null;
      }
    },
    enabled: false // Manual fetch only
  });

  // Mutations for WhatsApp Templates
  const syncTemplatesMutation = useMutation({
    mutationFn: async (data?: { force?: boolean; templates?: string[] }) => {
      return notificationSettingsApi.syncWhatsAppTemplates(data);
    },
    onSuccess: (response) => {
      // Store the sync results for display
      setSyncResults(response);

      // Check if the sync actually succeeded based on response data
      if (response.data?.success === false || response.success === false) {
        // Show detailed error message with sync results
        const synced = response.data?.synced || response.synced || 0;
        const failed = response.data?.failed || response.failed || 0;
        const message = response.data?.message || response.message || 'Sync completed with issues';

        showToast.error(`${message} (${synced} synced, ${failed} failed)`);

        // Show individual template errors if available
        if (response.data?.details || response.details) {
          const details = response.data?.details || response.details;
          Object.keys(details).forEach(templateName => {
            const templateDetail = details[templateName];
            if (!templateDetail.success && templateDetail.error) {
              console.error(`${templateName}: ${templateDetail.error}`);
            }
          });
        }
      } else {
        // Real success
        const synced = response.data?.synced || response.synced || 0;
        const message = response.data?.message || response.message || 'Templates synced successfully!';

        if (synced > 0) {
          showToast.success(`${message} (${synced} templates synced)`);
        } else {
          showToast.info('No templates needed syncing');
        }
      }
      refetchDashboard();
    },
    onError: (error: any) => {
      showToast.error(error.response?.data?.message || 'Failed to sync templates');
    }
  });

  const testTemplateMutation = useMutation({
    mutationFn: async (data: { template_name: string; test_number: string; sample_data?: any }) => {
      return notificationSettingsApi.testWhatsAppTemplate(data);
    },
    onSuccess: (response) => {
      showToast.success(response.message || 'Test template sent successfully!');
    },
    onError: (error: any) => {
      showToast.error(error.response?.data?.message || 'Failed to test template');
    }
  });

  const clearCachesMutation = useMutation({
    mutationFn: async () => {
      return notificationSettingsApi.clearWhatsAppTemplateCaches();
    },
    onSuccess: (response) => {
      showToast.success(response.message || 'Template caches cleared successfully!');
      refetchDashboard();
    },
    onError: (error: any) => {
      showToast.error(error.response?.data?.message || 'Failed to clear caches');
    }
  });

  // Populate form with existing configuration data
  useEffect(() => {
    if (channels && channels.length > 0) {
      const channelConfig = channels.find((ch: CommunicationChannel) =>
        ch.channel_type === selectedChannel && ch.provider_name.toLowerCase() === selectedProvider
      );

      if (channelConfig && channelConfig.config) {
        const config = channelConfig.config;
        setFormData(prev => {
          const updated = { ...prev };
          Object.keys(config).forEach(key => {
            if (key in updated) {
              updated[key] = config[key];
            }
          });
          return updated;
        });
      }
    }
  }, [channels, selectedChannel, selectedProvider]);

  const getChannelStatus = (channel: CommunicationChannel) => {
    if (!channel.is_active) return { status: 'inactive', color: 'text-gray-500', icon: XCircle };
    if (!channel.config || Object.keys(channel.config).length === 0) return { status: 'incomplete', color: 'text-yellow-500', icon: AlertCircle };
    return { status: 'active', color: 'text-green-500', icon: CheckCircle };
  };

  const getChannelIcon = (channelType: string) => {
    switch (channelType) {
      case 'email': return Mail;
      case 'sms': return Smartphone;
      case 'whatsapp': return MessageSquare;
      default: return Globe;
    }
  };

  const getProviderIcon = (iconName: string) => {
    switch (iconName) {
      case 'mail': return Mail;
      case 'twilio': return MessageSquare;
      case 'msg91': return MessageSquare;
      case 'textlocal': return MessageSquare;
      case 'whatsapp': return MessageSquare;
      case 'sendgrid': return Send;
      case 'mailgun': return Mail;
      case 'aws': return Shield;
      case 'api': return Server;
      default: return Zap;
    }
  };

  const handleFieldChange = (key: string, value: string | number) => {
    setFormData(prev => ({
      ...prev,
      [key]: value
    }));
  };

  // Test functions
  const handleTestEmail = async () => {
    if (!testEmail) {
      showToast.error('Please enter a test email address');
      return;
    }

    setIsTesting(true);
    try {
      const result = await communicationConfigApi.testEmail({ test_email: testEmail });
      showToast.success((result as any)?.message || 'Test email sent successfully!');
      setTestEmail('');
    } catch (error: any) {
      showToast.error((error as any)?.response?.data?.message || 'Failed to send test email');
    } finally {
      setIsTesting(false);
    }
  };

  const handleTestSMS = async (channel?: CommunicationChannel) => {
    if (!testPhone) {
      showToast.error('Please enter a test phone number');
      return;
    }

    setIsTesting(true);
    try {
      // Backend now automatically uses the existing active configuration
      const result = await communicationConfigApi.testSMS({
        test_number: testPhone
      });
      showToast.success((result as any)?.message || 'SMS test sent successfully!');
      setTestPhone('');
    } catch (error: any) {
      showToast.error((error as any)?.response?.data?.message || 'Failed to send test SMS');
    } finally {
      setIsTesting(false);
    }
  };

  const handleTestWhatsApp = async (channel?: CommunicationChannel) => {
    if (!testPhone) {
      showToast.error('Please enter a test phone number');
      return;
    }

    setIsTesting(true);
    try {
      // Backend now automatically uses the existing active configuration
      const result = await communicationConfigApi.testWhatsApp({
        test_number: testPhone
      });
      showToast.success((result as any)?.message || 'WhatsApp test sent successfully!');
      setTestPhone('');
    } catch (error: any) {
      showToast.error((error as any)?.response?.data?.message || 'Failed to send test WhatsApp message');
    } finally {
      setIsTesting(false);
    }
  };

  // Template structures are now fetched from backend API - no local definitions

  const handleCreateTemplateFromPreset = async (templateName: string) => {
    const template = templateStructures?.find((t: any) => t.name === templateName);
    if (!template) return;

    setCreatingTemplate(true);
    try {
      // Use the existing sync API which is already working
      const response = await notificationSettingsApi.syncWhatsAppTemplates({
        templates: [templateName],
        force: true
      });

      // Check the actual response status
      if (response.success === false || response.data?.success === false) {
        const synced = response.synced || response.data?.synced || 0;
        const failed = response.failed || response.data?.failed || 0;
        const message = response.message || response.data?.message || 'Template creation failed';

        if (failed > 0) {
          showToast.error(`${message} (${synced} created, ${failed} failed)`);

          // Show specific error if available
          const details = response.details || response.data?.details;
          if (details && details[templateName] && !details[templateName].success) {
            console.error(`${templateName} creation error:`, details[templateName].error);
          }
        } else {
          showToast.warning(message);
        }
      } else {
        const synced = response.synced || response.data?.synced || 0;
        const message = response.message || response.data?.message || 'Template creation initiated';

        if (synced > 0) {
          showToast.success(`Template "${templateName}" creation process initiated! Check WhatsApp Business Manager for approval.`);
        } else {
          showToast.info(`Template "${templateName}" may already exist or is in process`);
        }
      }

      // Refresh templates after creation
      setTimeout(() => {
        refetchDashboard();
      }, 3000);
    } catch (error: any) {
      console.error('Error creating template from preset:', error);
      showToast.error(error.response?.data?.message || 'Failed to create template. Please check your connection and try again.');
    } finally {
      setCreatingTemplate(false);
    }
  };

  // Handle creating template from preset
  const handleCreateTemplate = async () => {
    if (!selectedPreset || !newTemplateName) return;

    setCreatingTemplate(true);
    try {
      const response = await fetch('/api/v1/admin/whatsapp-templates/create-from-preset', {
        method: 'POST',
        headers: {
          'Authorization': `Bearer ${localStorage.getItem('admin_token')}`,
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          preset_key: selectedPreset.key,
          custom_name: newTemplateName,
          language: 'en_US',
          customizations: {}
        })
      });

      const data = await response.json();
      if (data.success) {
        showToast.success(`Template "${newTemplateName}" created successfully!`);
        setShowCreateTemplate(false);
        setSelectedCategory('');
        setSelectedPreset(null);
        setNewTemplateName('');
        refetchDashboard();
      } else {
        showToast.error(data.message || 'Failed to create template');
      }
    } catch (error) {
      console.error('Error creating template:', error);
      showToast.error('Failed to create template');
    } finally {
      setCreatingTemplate(false);
    }
  };

  // Handle testing template
  const handleTestTemplate = async (templateName: string) => {
    if (!templateTestNumber) {
      showToast.error('Please enter a test phone number');
      return;
    }

    try {
      const response = await fetch('/api/v1/admin/whatsapp-templates/test', {
        method: 'POST',
        headers: {
          'Authorization': `Bearer ${localStorage.getItem('admin_token')}`,
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          template_name: templateName,
          test_number: templateTestNumber
        })
      });

      const data = await response.json();
      if (data.success) {
        showToast.success(`Test message sent to ${templateTestNumber}`);
      } else {
        showToast.error(data.message || 'Failed to send test message');
      }
    } catch (error) {
      console.error('Error testing template:', error);
      showToast.error('Failed to send test message');
    }
  };

  // Save functions
  const handleSaveConfig = async (existingId?: number) => {
    try {
      const configData = {
        channel_type: selectedChannel,
        provider_name: selectedProvider,
        config: formData,
        is_active: true
      };

      if (existingId) {
        await communicationConfigApi.update(existingId, configData);
        showToast.success('Configuration updated successfully');
      } else {
        await communicationConfigApi.store(configData);
        showToast.success('Configuration saved successfully');
      }
      refetch();
    } catch (error: any) {
      showToast.error((error as any)?.response?.data?.message || 'Failed to save configuration');
    }
  };

  const renderFormField = (field: ProviderField) => {
    const value = formData[field.key] || '';

    switch (field.type) {
      case 'select':
        return (
          <select
            value={value.toString()}
            onChange={(e) => handleFieldChange(field.key, e.target.value)}
            className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            {field.options?.map((option) => (
              <option key={option.value} value={option.value}>
                {option.label}
              </option>
            ))}
          </select>
        );

      case 'password':
        return (
          <input
            type="password"
            value={value.toString()}
            onChange={(e) => handleFieldChange(field.key, e.target.value)}
            className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder={field.placeholder}
          />
        );

      case 'number':
        return (
          <input
            type="number"
            value={value.toString()}
            onChange={(e) => handleFieldChange(field.key, parseInt(e.target.value) || 0)}
            className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder={field.placeholder}
          />
        );

      case 'email':
        return (
          <input
            type="email"
            value={value.toString()}
            onChange={(e) => handleFieldChange(field.key, e.target.value)}
            className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder={field.placeholder}
          />
        );

      case 'url':
        return (
          <input
            type="url"
