import React, { useState } from 'react';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { toast } from 'react-hot-toast';
import {
  BarChart3,
  ShoppingBag,
  Users,
  Globe,
  Shield,
  Save,
  Eye,
  AlertCircle,
  Loader2
} from 'lucide-react';

// API service
import { adminApi } from '../../services/adminApi';

// Types
interface MarketingSettingsData {
  analytics: {
    google_analytics_enabled: boolean;
    google_analytics_measurement_id: string;
    google_analytics_debug_mode: boolean;
    hotjar_enabled: boolean;
    hotjar_site_id: string;
  };
  pixels: {
    meta_pixel_enabled: boolean;
    meta_pixel_id: string;
    meta_advanced_matching: boolean;
    tiktok_pixel_enabled: boolean;
    tiktok_pixel_id: string;
  };
  feeds: {
    google_shopping_enabled: boolean;
    google_shopping_include_out_of_stock: boolean;
    facebook_catalog_enabled: boolean;
    facebook_catalog_auto_sync: boolean;
    facebook_catalog_id: string;
    rss_feed_enabled: boolean;
    rss_max_items: number;
  };
  social: {
    facebook_url: string;
    twitter_handle: string;
    instagram_url: string;
    youtube_url: string;
    linkedin_url: string;
  };
  seo: {
    meta_title_suffix: string;
    meta_description: string;
    meta_keywords: string;
    canonical_url: string;
    structured_data_enabled: boolean;
  };
  tracking: {
    cookie_consent_required: boolean;
    tracking_debug_mode: boolean;
    track_events: string[];
  };
}

const MarketingSettings: React.FC = () => {
  const queryClient = useQueryClient();
  const [activeTab, setActiveTab] = useState('analytics');

  // Fetch marketing settings
  const { data: settings, isLoading, error } = useQuery({
    queryKey: ['marketing-settings'],
    queryFn: () => adminApi.getMarketingSettings(),
    refetchOnWindowFocus: false,
    select: (response) => response.data,
  });

  // Update settings mutation
  const updateSettingsMutation = useMutation({
    mutationFn: (data: MarketingSettingsData) => adminApi.updateMarketingSettings(data),
    onSuccess: () => {
      toast.success('Marketing settings updated successfully!');
      queryClient.invalidateQueries({ queryKey: ['marketing-settings'] });
    },
    onError: (error: any) => {
      toast.error(error.message || 'Failed to update settings');
    },
  });

  // Test integration mutation
  const testIntegrationMutation = useMutation({
    mutationFn: (service: string) => adminApi.testMarketingIntegration(service),
    onSuccess: (data) => {
      toast.success(`Integration test successful: ${data?.data?.message}`);
    },
    onError: (error: any) => {
      toast.error(error.message || 'Integration test failed');
    },
  });

  const handleSave = () => {
    if (!settings) return;
    updateSettingsMutation.mutate(settings);
  };

  const handleFieldChange = (category: keyof MarketingSettingsData, field: string, value: any) => {
    if (!settings) return;

    // Map the frontend field names to backend structure
    const fieldMap: Record<string, string> = {
      'google_analytics_enabled': 'enabled',
      'google_analytics_measurement_id': 'measurement_id',
      'google_analytics_debug_mode': 'debug_mode',
      'hotjar_enabled': 'enabled',
      'hotjar_site_id': 'site_id',
    };

    const backendField = fieldMap[field] || field;

    const updatedSettings = {
      ...settings,
      [category]: {
        ...settings[category],
        // Handle nested structure for analytics
        ...(category === 'analytics' && field.startsWith('google_analytics') ? {
          google_analytics: {
            ...settings.analytics.google_analytics,
            [backendField]: value,
          }
        } : {}),
        ...(category === 'analytics' && field.startsWith('hotjar') ? {
          hotjar: {
            ...settings.analytics.hotjar,
            [backendField]: value,
          }
        } : {}),
        ...(!(category === 'analytics' && (field.startsWith('google_analytics') || field.startsWith('hotjar'))) && {
          [backendField]: value,
        }),
      },
    };

    queryClient.setQueryData(['marketing-settings'], updatedSettings);
  };

  const tabs = [
    { id: 'analytics', label: 'Analytics', icon: BarChart3 },
    { id: 'pixels', label: 'Pixels', icon: Eye },
    { id: 'feeds', label: 'Feeds', icon: Globe },
    { id: 'social', label: 'Social', icon: Users },
    { id: 'seo', label: 'SEO', icon: Shield },
    { id: 'tracking', label: 'Tracking', icon: ShoppingBag },
  ];

  if (error) {
    return (
      <div className="space-y-6">
        <div className="bg-red-50 border border-red-200 rounded-lg p-6">
          <div className="flex items-center">
            <AlertCircle className="h-5 w-5 text-red-400 mr-2" />
            <div>
              <h3 className="text-sm font-medium text-red-800">Failed to load settings</h3>
              <p className="mt-1 text-sm text-red-600">
                There was an error loading the marketing settings. Please try again.
              </p>
            </div>
          </div>
        </div>
      </div>
    );
  }

  if (isLoading) {
    return (
      <div className="flex items-center justify-center h-64">
        <Loader2 className="h-8 w-8 animate-spin text-indigo-600" />
      </div>
    );
  }

  if (error) {
    return (
      <div className="bg-red-50 border border-red-200 rounded-lg p-6">
        <div className="flex items-center">
          <AlertCircle className="h-5 w-5 text-red-400 mr-2" />
          <div>
            <h3 className="text-sm font-medium text-red-800">Failed to load settings</h3>
            <p className="mt-1 text-sm text-red-600">
              There was an error loading the marketing settings. Please try again.
            </p>
          </div>
        </div>
        <button
          onClick={() => queryClient.invalidateQueries({ queryKey: ['marketing-settings'] })}
          className="mt-4 inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm leading-4 font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
        >
          Try Again
        </button>
      </div>
    );
  }

  return (
    <div className="space-y-6">
      {/* Header */}
      <div className="flex items-center justify-between">
        <div>
          <h1 className="text-2xl font-semibold text-gray-900">Marketing Settings</h1>
          <p className="mt-1 text-sm text-gray-500">
            Configure your marketing integrations and settings
          </p>
        </div>

        <div className="flex items-center space-x-3">
          <button
            onClick={handleSave}
            disabled={updateSettingsMutation.isPending || !settings}
            className="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 disabled:opacity-50"
          >
            {updateSettingsMutation.isPending ? (
              <Loader2 className="h-4 w-4 mr-2 animate-spin" />
            ) : (
              <Save className="h-4 w-4 mr-2" />
            )}
            Save Settings
          </button>
        </div>
      </div>

      {/* Tabs */}
      <div className="border-b border-gray-200">
        <nav className="-mb-px flex space-x-8">
          {tabs.map((tab) => (
            <button
              key={tab.id}
              onClick={() => setActiveTab(tab.id)}
              className={`group inline-flex items-center py-4 px-1 border-b-2 font-medium text-sm ${
                activeTab === tab.id
                  ? 'border-indigo-500 text-indigo-600'
                  : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'
              }`}
            >
              <tab.icon
                className={`mr-2 h-5 w-5 ${
                  activeTab === tab.id ? 'text-indigo-500' : 'text-gray-400 group-hover:text-gray-500'
                }`}
              />
              {tab.label}
            </button>
          ))}
        </nav>
      </div>

      {/* Tab Content */}
      {activeTab === 'analytics' && settings && (
        <div className="bg-white shadow sm:rounded-lg">
          <div className="px-4 py-5 sm:p-6">
            <h3 className="text-lg leading-6 font-medium text-gray-900 mb-4">
              Analytics Configuration
            </h3>
            <div className="space-y-6">
              {/* Google Analytics */}
              <div>
                <h4 className="text-md font-medium text-gray-900 mb-4">Google Analytics</h4>
                <div className="space-y-4">
                  <div className="flex items-center justify-between">
                    <div>
                      <label className="text-sm font-medium text-gray-700">
                        Enable Google Analytics
                      </label>
                      <p className="text-sm text-gray-500">
                        Track website traffic and user behavior
                      </p>
                    </div>
                    <button
                      onClick={() => handleFieldChange('analytics', 'google_analytics_enabled', !settings?.analytics.google_analytics.enabled)}
                      className={`relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none ${
                        settings?.analytics.google_analytics.enabled ? 'bg-indigo-600' : 'bg-gray-200'
                      }`}
                    >
                      <span
                        className={`translate-x-0 inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200 ${
                          settings?.analytics.google_analytics.enabled ? 'translate-x-5' : 'translate-x-0'
                        }`}
                      />
                    </button>
                  </div>

                  {settings?.analytics.google_analytics.enabled && (
                    <>
                      <div>
                        <label className="block text-sm font-medium text-gray-700">
                          Measurement ID
                        </label>
                        <input
                          type="text"
                          value={settings?.analytics.google_analytics.measurement_id || ''}
                          onChange={(e) => handleFieldChange('analytics', 'google_analytics_measurement_id', e.target.value)}
                          placeholder="G-XXXXXXXXXX"
                          className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                        />
                        <p className="mt-1 text-sm text-gray-500">
                          Your GA4 Measurement ID (format: G-XXXXXXXXXX)
                        </p>
                      </div>

                      <div className="flex items-center justify-between">
                        <div>
                          <label className="text-sm font-medium text-gray-700">
                            Debug Mode
                          </label>
                          <p className="text-sm text-gray-500">
                            Enable debug logging for development
                          </p>
                        </div>
                        <button
                          onClick={() => handleFieldChange('analytics', 'google_analytics_debug_mode', !settings?.analytics.google_analytics.debug_mode)}
                          className={`relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none ${
                            settings?.analytics.google_analytics.debug_mode ? 'bg-indigo-600' : 'bg-gray-200'
                          }`}
                        >
                          <span
                            className={`translate-x-0 inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200 ${
                              settings?.analytics.google_analytics.debug_mode ? 'translate-x-5' : 'translate-x-0'
                            }`}
                          />
                        </button>
                      </div>
                    </>
                  )}
                </div>
              </div>

              {/* Hotjar */}
              <div>
                <h4 className="text-md font-medium text-gray-900 mb-4">Hotjar</h4>
                <div className="space-y-4">
                  <div className="flex items-center justify-between">
                    <div>
                      <label className="text-sm font-medium text-gray-700">
                        Enable Hotjar
                      </label>
                      <p className="text-sm text-gray-500">
                        Heatmaps and session recordings for UX analysis
                      </p>
                    </div>
                    <button
                      onClick={() => handleFieldChange('analytics', 'hotjar_enabled', !settings?.analytics.hotjar.enabled)}
                      className={`relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none ${
                        settings?.analytics.hotjar.enabled ? 'bg-indigo-600' : 'bg-gray-200'
                      }`}
                    >
                      <span
                        className={`translate-x-0 inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200 ${
                          settings?.analytics.hotjar.enabled ? 'translate-x-5' : 'translate-x-0'
                        }`}
                      />
                    </button>
                  </div>

                  {settings?.analytics.hotjar.enabled && (
                    <div>
                      <label className="block text-sm font-medium text-gray-700">
                        Site ID
                      </label>
                      <input
                        type="text"
                        value={settings?.analytics.hotjar.site_id || ''}
                        onChange={(e) => handleFieldChange('analytics', 'hotjar_site_id', e.target.value)}
                        placeholder="Your Hotjar Site ID"
                        className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                      />
                      <p className="mt-1 text-sm text-gray-500">
                        Your Hotjar Site ID from your Hotjar dashboard
                      </p>
                    </div>
                  )}
                </div>
              </div>
            </div>
          </div>
        </div>
      )}

      {activeTab === 'pixels' && settings && (
        <div className="bg-white shadow sm:rounded-lg">
          <div className="px-4 py-5 sm:p-6">
            <h3 className="text-lg leading-6 font-medium text-gray-900 mb-4">
              Tracking Pixels
            </h3>
            <div className="space-y-6">
              {/* Meta Pixel */}
              <div>
                <h4 className="text-md font-medium text-gray-900 mb-4">Meta Pixel (Facebook)</h4>
                <div className="space-y-4">
                  <div className="flex items-center justify-between">
                    <div>
                      <label className="text-sm font-medium text-gray-700">
                        Enable Meta Pixel
                      </label>
                      <p className="text-sm text-gray-500">
                        Track conversions and optimize ads
                      </p>
                    </div>
                    <button
                      onClick={() => handleFieldChange('pixels', 'meta_pixel_enabled', !settings?.data.pixels.meta_pixel_enabled)}
                      className={`relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none ${
                        settings?.data.pixels.meta_pixel_enabled ? 'bg-indigo-600' : 'bg-gray-200'
                      }`}
                    >
                      <span
                        className={`translate-x-0 inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200 ${
                          settings?.data.pixels.meta_pixel_enabled ? 'translate-x-5' : 'translate-x-0'
                        }`}
                      />
                    </button>
                  </div>

                  {settings?.data.pixels.meta_pixel_enabled && (
                    <>
                      <div>
                        <label className="block text-sm font-medium text-gray-700">
                          Pixel ID
                        </label>
                        <input
                          type="text"
                          value={settings?.data.pixels.meta_pixel_id || ''}
                          onChange={(e) => handleFieldChange('pixels', 'meta_pixel_id', e.target.value)}
                          placeholder="Your Meta Pixel ID"
                          className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                        />
                      </div>

                      <div className="flex items-center justify-between">
                        <div>
                          <label className="text-sm font-medium text-gray-700">
                            Advanced Matching
                          </label>
                          <p className="text-sm text-gray-500">
                            Improve attribution with customer data
                          </p>
                        </div>
                        <button
                          onClick={() => handleFieldChange('pixels', 'meta_advanced_matching', !settings?.data.pixels.meta_advanced_matching)}
                          className={`relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none ${
                            settings?.data.pixels.meta_advanced_matching ? 'bg-indigo-600' : 'bg-gray-200'
                          }`}
                        >
                          <span
                            className={`translate-x-0 inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200 ${
                              settings?.data.pixels.meta_advanced_matching ? 'translate-x-5' : 'translate-x-0'
                            }`}
                          />
                        </button>
                      </div>
                    </>
                  )}
                </div>
              </div>

              {/* TikTok Pixel */}
              <div>
                <h4 className="text-md font-medium text-gray-900 mb-4">TikTok Pixel</h4>
                <div className="space-y-4">
                  <div className="flex items-center justify-between">
                    <div>
                      <label className="text-sm font-medium text-gray-700">
                        Enable TikTok Pixel
                      </label>
                      <p className="text-sm text-gray-500">
                        Track TikTok ad performance
                      </p>
                    </div>
                    <button
                      onClick={() => handleFieldChange('pixels', 'tiktok_pixel_enabled', !settings?.data.pixels.tiktok_pixel_enabled)}
                      className={`relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none ${
                        settings?.data.pixels.tiktok_pixel_enabled ? 'bg-indigo-600' : 'bg-gray-200'
                      }`}
                    >
                      <span
                        className={`translate-x-0 inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200 ${
                          settings?.data.pixels.tiktok_pixel_enabled ? 'translate-x-5' : 'translate-x-0'
                        }`}
                      />
                    </button>
                  </div>

                  {settings?.data.pixels.tiktok_pixel_enabled && (
                    <div>
                      <label className="block text-sm font-medium text-gray-700">
                        Pixel ID
                      </label>
                      <input
                        type="text"
                        value={settings?.data.pixels.tiktok_pixel_id || ''}
                        onChange={(e) => handleFieldChange('pixels', 'tiktok_pixel_id', e.target.value)}
                        placeholder="Your TikTok Pixel ID"
                        className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                      />
                    </div>
                  )}
                </div>
              </div>
            </div>
          </div>
        </div>
      )}

      {activeTab === 'feeds' && settings && (
        <div className="bg-white shadow sm:rounded-lg">
          <div className="px-4 py-5 sm:p-6">
            <h3 className="text-lg leading-6 font-medium text-gray-900 mb-4">
              Product Feeds
            </h3>
            <div className="space-y-6">
              {/* Google Shopping Feed */}
              <div>
                <h4 className="text-md font-medium text-gray-900 mb-4">Google Shopping</h4>
                <div className="space-y-4">
                  <div className="flex items-center justify-between">
                    <div>
                      <label className="text-sm font-medium text-gray-700">
                        Enable Google Shopping Feed
                      </label>
                      <p className="text-sm text-gray-500">
                        Generate product feed for Google Shopping
                      </p>
                    </div>
                    <button
                      onClick={() => handleFieldChange('feeds', 'google_shopping_enabled', !settings?.data.feeds.google_shopping_enabled)}
                      className={`relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none ${
                        settings?.data.feeds.google_shopping_enabled ? 'bg-indigo-600' : 'bg-gray-200'
                      }`}
                    >
                      <span
                        className={`translate-x-0 inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200 ${
                          settings?.data.feeds.google_shopping_enabled ? 'translate-x-5' : 'translate-x-0'
                        }`}
                      />
                    </button>
                  </div>

                  <div className="flex items-center justify-between">
                    <div>
                      <label className="text-sm font-medium text-gray-700">
                        Include Out of Stock Products
                      </label>
                      <p className="text-sm text-gray-500">
                        Include products that are out of stock in the feed
                      </p>
                    </div>
                    <button
                      onClick={() => handleFieldChange('feeds', 'google_shopping_include_out_of_stock', !settings?.data.feeds.google_shopping_include_out_of_stock)}
                      className={`relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none ${
                        settings?.data.feeds.google_shopping_include_out_of_stock ? 'bg-indigo-600' : 'bg-gray-200'
                      }`}
                    >
                      <span
                        className={`translate-x-0 inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200 ${
                          settings?.data.feeds.google_shopping_include_out_of_stock ? 'translate-x-5' : 'translate-x-0'
                        }`}
                      />
                    </button>
                  </div>
                </div>
              </div>

              {/* Facebook Catalog */}
              <div>
                <h4 className="text-md font-medium text-gray-900 mb-4">Facebook Catalog</h4>
                <div className="space-y-4">
                  <div className="flex items-center justify-between">
                    <div>
                      <label className="text-sm font-medium text-gray-700">
                        Enable Facebook Catalog
                      </label>
                      <p className="text-sm text-gray-500">
                        Sync products with Facebook Catalog
                      </p>
                    </div>
                    <button
                      onClick={() => handleFieldChange('feeds', 'facebook_catalog_enabled', !settings?.data.feeds.facebook_catalog_enabled)}
                      className={`relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none ${
                        settings?.data.feeds.facebook_catalog_enabled ? 'bg-indigo-600' : 'bg-gray-200'
                      }`}
                    >
                      <span
                        className={`translate-x-0 inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200 ${
                          settings?.data.feeds.facebook_catalog_enabled ? 'translate-x-5' : 'translate-x-0'
                        }`}
                      />
                    </button>
                  </div>

                  {settings?.data.feeds.facebook_catalog_enabled && (
                    <>
                      <div className="flex items-center justify-between">
                        <div>
                          <label className="text-sm font-medium text-gray-700">
                            Auto Sync
                          </label>
                          <p className="text-sm text-gray-500">
                            Automatically sync products with Facebook
                          </p>
                        </div>
                        <button
                          onClick={() => handleFieldChange('feeds', 'facebook_catalog_auto_sync', !settings?.data.feeds.facebook_catalog_auto_sync)}
                          className={`relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none ${
                            settings?.data.feeds.facebook_catalog_auto_sync ? 'bg-indigo-600' : 'bg-gray-200'
                          }`}
                        >
                          <span
                            className={`translate-x-0 inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200 ${
                              settings?.data.feeds.facebook_catalog_auto_sync ? 'translate-x-5' : 'translate-x-0'
                            }`}
                          />
                        </button>
                      </div>

                      <div>
                        <label className="block text-sm font-medium text-gray-700">
                          Catalog ID
                        </label>
                        <input
                          type="text"
                          value={settings?.data.feeds.facebook_catalog_id || ''}
                          onChange={(e) => handleFieldChange('feeds', 'facebook_catalog_id', e.target.value)}
                          placeholder="Your Facebook Catalog ID"
                          className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                        />
                      </div>
                    </>
                  )}
                </div>
              </div>

              {/* RSS Feed */}
              <div>
                <h4 className="text-md font-medium text-gray-900 mb-4">RSS Feed</h4>
                <div className="space-y-4">
                  <div className="flex items-center justify-between">
                    <div>
                      <label className="text-sm font-medium text-gray-700">
                        Enable RSS Feed
                      </label>
                      <p className="text-sm text-gray-500">
                        Generate RSS feeds for products and categories
                      </p>
                    </div>
                    <button
                      onClick={() => handleFieldChange('feeds', 'rss_feed_enabled', !settings?.data.feeds.rss_feed_enabled)}
                      className={`relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none ${
                        settings?.data.feeds.rss_feed_enabled ? 'bg-indigo-600' : 'bg-gray-200'
                      }`}
                    >
                      <span
                        className={`translate-x-0 inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200 ${
                          settings?.data.feeds.rss_feed_enabled ? 'translate-x-5' : 'translate-x-0'
                        }`}
                      />
                    </button>
                  </div>

                  <div>
                    <label className="block text-sm font-medium text-gray-700">
                      Max Items per Feed
                    </label>
                    <input
                      type="number"
                      min="1"
                      max="500"
                      value={settings?.data.feeds.rss_max_items || 50}
                      onChange={(e) => handleFieldChange('feeds', 'rss_max_items', parseInt(e.target.value))}
                      className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                    />
                    <p className="mt-1 text-sm text-gray-500">
                      Maximum number of items in RSS feeds (1-500)
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      )}

      {/* Social Media Settings */}
      {activeTab === 'social' && settings && (
        <div className="bg-white shadow sm:rounded-lg">
          <div className="px-4 py-5 sm:p-6">
            <h3 className="text-lg leading-6 font-medium text-gray-900 mb-4">
              Social Media Profiles
            </h3>
            <div className="grid grid-cols-1 gap-6">
              <div>
                <label className="block text-sm font-medium text-gray-700">
                  Facebook URL
                </label>
                <input
                  type="url"
                  value={settings?.data.social.facebook_url || ''}
                  onChange={(e) => handleFieldChange('social', 'facebook_url', e.target.value)}
                  placeholder="https://facebook.com/yourpage"
                  className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700">
                  Twitter Handle
                </label>
                <input
                  type="text"
                  value={settings?.data.social.twitter_handle || ''}
                  onChange={(e) => handleFieldChange('social', 'twitter_handle', e.target.value)}
                  placeholder="Your Twitter handle (without @)"
                  className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700">
                  Instagram URL
                </label>
                <input
                  type="url"
                  value={settings?.data.social.instagram_url || ''}
                  onChange={(e) => handleFieldChange('social', 'instagram_url', e.target.value)}
                  placeholder="https://instagram.com/yourprofile"
                  className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700">
                  YouTube URL
                </label>
                <input
                  type="url"
                  value={settings?.data.social.youtube_url || ''}
                  onChange={(e) => handleFieldChange('social', 'youtube_url', e.target.value)}
                  placeholder="https://youtube.com/yourchannel"
                  className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700">
                  LinkedIn URL
                </label>
                <input
                  type="url"
                  value={settings?.data.social.linkedin_url || ''}
                  onChange={(e) => handleFieldChange('social', 'linkedin_url', e.target.value)}
                  placeholder="https://linkedin.com/company/yourpage"
                  className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                />
              </div>
            </div>
          </div>
        </div>
      )}

      {/* SEO Settings */}
      {activeTab === 'seo' && settings && (
        <div className="bg-white shadow sm:rounded-lg">
          <div className="px-4 py-5 sm:p-6">
            <h3 className="text-lg leading-6 font-medium text-gray-900 mb-4">
              SEO Configuration
            </h3>
            <div className="space-y-6">
              <div>
                <label className="block text-sm font-medium text-gray-700">
                  Meta Title Suffix
                </label>
                <input
                  type="text"
                  value={settings?.data.seo.meta_title_suffix || ''}
                  onChange={(e) => handleFieldChange('seo', 'meta_title_suffix', e.target.value)}
                  placeholder="Text appended to page titles"
                  className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700">
                  Default Meta Description
                </label>
                <textarea
                  rows={3}
                  value={settings?.data.seo.meta_description || ''}
                  onChange={(e) => handleFieldChange('seo', 'meta_description', e.target.value)}
                  placeholder="Default description for pages without custom description"
                  className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700">
                  Default Meta Keywords
                </label>
                <input
                  type="text"
                  value={settings?.data.seo.meta_keywords || ''}
                  onChange={(e) => handleFieldChange('seo', 'meta_keywords', e.target.value)}
                  placeholder="Default keywords for pages (comma separated)"
                  className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700">
                  Canonical URL Base
                </label>
                <input
                  type="url"
                  value={settings?.data.seo.canonical_url || ''}
                  onChange={(e) => handleFieldChange('seo', 'canonical_url', e.target.value)}
                  placeholder="Base URL for canonical tags"
                  className="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                />
              </div>

              <div className="flex items-center justify-between">
                <div>
                  <label className="text-sm font-medium text-gray-700">
                    Enable Structured Data
                  </label>
                  <p className="text-sm text-gray-500">
                    Generate JSON-LD structured data for SEO
                  </p>
                </div>
                <button
                  onClick={() => handleFieldChange('seo', 'structured_data_enabled', !settings?.data.seo.structured_data_enabled)}
                  className={`relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none ${
                    settings?.data.seo.structured_data_enabled ? 'bg-indigo-600' : 'bg-gray-200'
                  }`}
                >
                  <span
                    className={`translate-x-0 inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200 ${
                      settings?.data.seo.structured_data_enabled ? 'translate-x-5' : 'translate-x-0'
                    }`}
                  />
                </button>
              </div>
            </div>
          </div>
        </div>
      )}

      {/* Tracking Settings */}
      {activeTab === 'tracking' && settings && (
        <div className="bg-white shadow sm:rounded-lg">
          <div className="px-4 py-5 sm:p-6">
            <h3 className="text-lg leading-6 font-medium text-gray-900 mb-4">
              Tracking Configuration
            </h3>
            <div className="space-y-6">
              <div className="flex items-center justify-between">
                <div>
                  <label className="text-sm font-medium text-gray-700">
                    Require Cookie Consent
                  </label>
                  <p className="text-sm text-gray-500">
                    Show cookie consent banner to users
                  </p>
                </div>
                <button
                  onClick={() => handleFieldChange('tracking', 'cookie_consent_required', !settings?.data.tracking.cookie_consent_required)}
                  className={`relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none ${
                    settings?.data.tracking.cookie_consent_required ? 'bg-indigo-600' : 'bg-gray-200'
                  }`}
                >
                  <span
                    className={`translate-x-0 inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200 ${
                      settings?.data.tracking.cookie_consent_required ? 'translate-x-5' : 'translate-x-0'
                    }`}
                  />
                </button>
              </div>

              <div className="flex items-center justify-between">
                <div>
                  <label className="text-sm font-medium text-gray-700">
                    Debug Mode
                  </label>
                  <p className="text-sm text-gray-500">
                    Enable debug logging for tracking (development only)
                  </p>
                </div>
                <button
                  onClick={() => handleFieldChange('tracking', 'tracking_debug_mode', !settings?.data.tracking.tracking_debug_mode)}
                  className={`relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none ${
                    settings?.data.tracking.tracking_debug_mode ? 'bg-indigo-600' : 'bg-gray-200'
                  }`}
                >
                  <span
                    className={`translate-x-0 inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200 ${
                      settings?.data.tracking.tracking_debug_mode ? 'translate-x-5' : 'translate-x-0'
                    }`}
                  />
                </button>
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-3">
                  Track Events
                </label>
                <div className="space-y-2">
                  {[
                    { value: 'page_view', label: 'Page Views' },
                    { value: 'product_view', label: 'Product Views' },
                    { value: 'add_to_cart', label: 'Add to Cart' },
                    { value: 'begin_checkout', label: 'Begin Checkout' },
                    { value: 'purchase', label: 'Purchase' },
                    { value: 'search', label: 'Search' },
                    { value: 'share', label: 'Share' },
                    { value: 'newsletter_signup', label: 'Newsletter Signup' },
                  ].map((event) => (
                    <label key={event.value} className="flex items-center">
                      <input
                        type="checkbox"
                        checked={settings?.data.tracking.track_events?.includes(event.value) || false}
                        onChange={(e) => {
                          const events = settings?.data.tracking.track_events || [];
                          if (e.target.checked) {
                            handleFieldChange('tracking', 'track_events', [...events, event.value]);
                          } else {
                            handleFieldChange('tracking', 'track_events', events.filter((e: string) => e !== event.value));
                          }
                        }}
                        className="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
                      />
                      <span className="ml-2 text-sm text-gray-700">{event.label}</span>
                    </label>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      )}
    </div>
  );
};

export default MarketingSettings;